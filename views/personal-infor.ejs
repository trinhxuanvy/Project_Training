<body>

    <%- include('partials/menu-top.ejs') %>

    <div class="personal-infor-page personal-page">
        <div class="container">
            <div class="header">
                <p class="title">Quản lý tài khoản</p>
            </div>
            <div class="body">
                <form action="">
                    <div class="form-item">
                        <p class="title">Tên tài khoản:</p>
