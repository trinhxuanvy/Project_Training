                    <div class="form-item">
                        <p class="title">Số điện thoại:</p>
                        <label for="numPhone"></label>
                        <input type="text" id="numPhone" name="numPhone" value="" required placeholder="0706******">
                    </div>
                    <div class="box-btn">
                        <button class="btn-save"><span>Lưu thay đổi</span><i class="far fa-save"></i></button>
                        <a href="/personal" class="btn-back"><span>Quay lại</span><i class="fas fa-undo-alt    "></i></a>
                    </div>
                </form>
            </div>

        </div>

        <%- include('partials/footer.ejs') %> 
